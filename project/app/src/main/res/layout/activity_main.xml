<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical"
    tools:context="com.example.sadmansakib.todo.MainActivity"
    >

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addNewToDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        android:onClick="addNewToDo"
        android:src="@android:drawable/ic_input_add"
        app:fabSize="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/LIST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/noToDoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="66dp"
        android:text="To Do EMPTY \nAdd new To Do"
        android:textColor="#939090"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/noToDoIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/todo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />


</RelativeLayout>
